datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  username     String   @unique
  role         UserRole @default(USER)
  passwordHash String
  displayName  String?
  avatarUrl    String?
  spotifyId    String?  @unique
  latitude     Float?
  longitude    Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  nowPlaying   NowPlaying?
  trendings    TrendingPlayback[]
  sessions     Session[]
  resetTokens  PasswordResetToken[]

  @@index([email])
  @@index([spotifyId])
}

model Show {
  id        String   @id @default(uuid())
  artist    String
  venue     String
  city      String
  country   String   @default("Brasil")
  address   String?
  description String?
  latitude  Float
  longitude Float
  startsAt  DateTime
  thumbUrl  String?
  ticketUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([startsAt])
  @@index([city])
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model NowPlaying {
  id             String   @id @default(uuid())
  userId         String   @unique
  spotifyTrackId String
  trackName      String
  artistName     String
  albumImageUrl  String?
  latitude       Float?
  longitude      Float?
  startedAt      DateTime @default(now())
  expiresAt      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@index([spotifyTrackId])
}

model TrendingPlayback {
  id               String   @id @default(uuid())
  userId           String?
  artistId         String?
  artistName       String
  artistKey        String
  trackId          String?
  trackName        String
  trackKey         String
  trackFingerprint String
  playedAt         DateTime @default(now())
  createdAt        DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([playedAt])
  @@index([userId, trackFingerprint, playedAt])
  @@index([artistKey, playedAt])
  @@index([trackKey, playedAt])
}
